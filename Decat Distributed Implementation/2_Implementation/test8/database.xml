<!--
    This is the file format in which every entry will have
    type and its value just like database
    a record entry will be evaluated into python dict()
    type string will be converted to python string
    type int will be converted to python int
    type float will be converted to python float

-->
<database>

	<subjectRecord type="record" value="subjectRecord">
        <subjectId type="string" value="1" />
		<name type="string" value="Siddharth"/>
		<moviesWatched type="int" value="4"/>
	</subjectRecord>

	<subjectRecord type="record" value="subjectRecord">
